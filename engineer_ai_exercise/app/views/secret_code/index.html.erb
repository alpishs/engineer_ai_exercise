<form class="form-group" action="/generate_secret_codes" method="post">
  <div class="form-group  mb-2">
    <label for="selectValue" class="col-md-10 col-xs-7 form-group">Select Limit to create secret codes</label>
    <% if current_user.admin? %>
        <a class=" tooltipped" data-position="bottom" data-tooltip="This User has Admin Priveleges">Admin Access?</a>
    <%end%>
    <select name="count" class="form-control" id="selectValue">
      <option selected="selected">1</option>
      <option>10</option>
      <option>20</option>
      <option>50</option>
      <option>100</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary mb-2">Create Secret Codes</button>
</form>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Code</th>
      <th scope="col">User Id</th>
    </tr>
  </thead>
  <tbody>
  	<% @secret_codes.each do |secret_code|%>
    <tr>
      <th scope="row"><%=secret_code.id%></th>
      <td><%=secret_code.code%></td>
      <td><%=secret_code.user.email if secret_code.user%></td>
    </tr>
    <%end%>
  </tbody>
</table>

